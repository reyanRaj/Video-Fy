<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Video-Fy</title>
    <script>
      let ROOM_ID = "<%= roomId %>";
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <link rel="stylesheet" href="style.css">
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css">
    <link href='https://fonts.googleapis.com/css?family=Vibur:400' rel='stylesheet' type='text/css'>
     </head>
  <body>
      <div class="splash-screen">
        <p>Video-Fy</p>

      </div>
      <div class="main">

        <section class="main__left">
            <div class="main__videos">
               <div id="video-grid"></div>
            </div>
            <div class="main__controls">

              <div class="main__controls__block">
                <div class="main__controls__button" id="btn-mute-audio">
                  <i class="fas fa-microphone"></i>
                  <span>Mute</span>
                </div>
                 <div class="main__controls__button" id="btn-mute-video">
                  <i class="fas fa-video"></i>
                  <span>Stop Video</span>
                </div>
              </div>

              <div class="main__controls__block">
                <div class="main__controls__button">
                  <i class="fas fa-user-shield"></i>
                  <span>Security</span>
                </div>
                 <div class="main__controls__button">
                  <i class="fas fa-user-friends"></i>
                  <span>Participants</span>
                </div>

                <div class="main__controls__button" id="btn_toggle_chat">
                  <i class="far fa-comment-dots"></i>
                  <span>Chat</span>
                </div>
              </div>

              <div class="main__controls__block">
                <div class="main__controls__button">
                  <i class="fas fa-sign-out-alt"></i>
                  <span>Leave Meeting</span>
                </div>
              </div>
            </div>


        </section>

        <section class="main__right">
            <div class="main__header">
              <h1>Chat</h1>
            </div>

            <div class="main__chat__window">
              <ul class="messages">
                
              </ul>
            </div>

              <div class="main__message__container">
                <input type="text" placeholder="Enter Your messages Here" id="message-text">
                <button id="btn_send_msg"><i class="fas fa-paper-plane"></i></button>
              </div>
        </section>
      </div>
    <script src="script.js"></script>
  </body>
</html>
